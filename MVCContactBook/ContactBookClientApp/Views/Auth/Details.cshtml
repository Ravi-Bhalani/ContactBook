@using ContactBookClientApp.ViewModels
@model UserViewModel

<h3 style="display: flex; justify-content:center;">Contact Details</h3>
<div class="container" style="display: flex; justify-content:center;">

    <div class="card container text-dark bg-light m-3 p-0" style="max-width: 30rem; ">
        <div class="card-header px-0" style="display: flex; justify-content:center;">
            @if (Model.FileName == null)
            {
                <img src="~/uploads/DefaultImage.jpg" alt="Employee Image" width="70" height="70" style="border-radius: 50%;" />
            }
            else
            {
                <img src="~/uploads/@Model.FileName" alt="Employee Image" width="70" height="70" style="border-radius: 50%;" />
            }
        </div>
        <div class="card-body">
            <p class="card-text">
                <h6>Name: @Model.FirstName @Model.LastName</h6>
                <h6>Phone: @Model.ContactNumber </h6>
                <h6>Email: @Model.Email </h6>
            </p>
        </div>
    </div>


</div>
<a asp-action="Edit" asp-route-id="@User.Identity.Name">Edit</a>

<a asp-action="Index" asp-controller="Contact" class="btn btn-secondary">Back To List</a>
